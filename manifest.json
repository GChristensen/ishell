{
    "version": "0.1.18",
    "name": "iShell Extension",
    "short_name": "iShell",
    "homepage_url": "https://gchristensen.github.io/#ishell",
    "author": "gchristnsn",
    "description": "A natural language interface for browsers",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
    "applications": {
       "gecko": {
         "id": "ishell@gchristensen.github.io",
         "strict_min_version": "78.0"
       }
     },
    "manifest_version": 2,
    "background": {
      "page": "background.html",
      "persistent": true
    },
    "browser_action": {
        "default_title": "iShell",
        "default_popup": "popup.html",
        "default_icon": "/res/icons/logo.svg"
    },
    "options_ui": {
        "page": "res/options.html",
        "open_in_tab": true
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "chromeos": "Ctrl+Space",
                "linux": "Ctrl+Space",
                "mac": "Command+Space",
                "windows": "Ctrl+Space"
            }
        }
    },
    "icons": { "128" : "/res/icons/logo.svg" },
    "permissions": [
        "<all_urls>",
        "activeTab", 
        "tabs",
        "tabHide",
        "clipboardRead", 
        "clipboardWrite", 
        "notifications", 
        "storage",
        "unlimitedStorage",
        "contextMenus",
        "history",
        "webNavigation",
        "management",
        "downloads"
    ]
}